<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorBg">

        <ImageView
            android:id="@+id/iv_mine_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_mine_icon"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/colorTextColor"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/add_more" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_select"
            android:text="0.0Byte"
            android:textColor="@color/colorTextColorLight"
            android:textSize="14dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/v_padding"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBottom" />

</LinearLayout>